{
    "name": "phauthentic/phpunit-execution-timing-extension",
    "type": "library",
    "description": "PHPUnit extension to track and report test execution times",
    "keywords": [
        "phpunit",
        "extension",
        "testing",
        "performance",
        "timing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Kr√§mer",
            "homepage": "https://florian-kraemer.net"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpunit/phpunit": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0|^12.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Phauthentic\\PHPUnit\\ExecutionTiming\\": "src/ExecutionTimingExtension/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phauthentic\\PHPUnit\\ExecutionTiming\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests",
        "test": "phpunit",
        "analyse": "phpstan analyse --level=8 src",
        "quality": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

